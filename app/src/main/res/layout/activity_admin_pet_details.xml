<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_petDetails"
    android:orientation="vertical"
    android:fillViewport="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deletePet"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dVisitationsCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="258dp"
            android:layout_marginTop="62dp"
            android:background="@drawable/pet_button"
            android:text="Delete Pet" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/goBackFromPetDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pet_button"
            android:text="Go Back" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/pet_button"
            android:text="Edit Pet" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/generateQR"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="256dp"
            android:background="@drawable/pet_button"
            android:text="Generate QR" />

        <ScrollView
            android:id="@+id/dVaccinationCase"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="334dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/dVaccination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"></ListView>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/dSurgeriesCase"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dVaccinationCase"
            android:layout_marginStart="0dp"
            android:layout_marginTop="76dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/dSurgeries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"></ListView>
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/dMedicationsCase"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dSurgeriesCase"
            android:layout_marginStart="0dp"
            android:layout_marginTop="76dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/dMedications"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"></ListView>
            </LinearLayout>
        </ScrollView>


        <ScrollView
            android:id="@+id/dVisitationsCase"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/dMedicationsCase"
            android:layout_marginStart="0dp"
            android:layout_marginTop="81dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/dVisitations"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="0dp"></ListView>
            </LinearLayout>
        </ScrollView>


        <TextView
            android:id="@+id/dPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="97dp"
            android:textColor="@color/black"
            android:text="Pet Name:" />

        <TextView
            android:id="@+id/dPetAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="128dp"
            android:textColor="@color/black"
            android:text="Age" />

        <TextView
            android:id="@+id/dPetWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="158dp"
            android:textColor="@color/black"
            android:text="Weight" />

        <TextView
            android:id="@+id/dPetBreed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="194dp"
            android:textColor="@color/black"
            android:text="Breed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="159dp"
            android:layout_marginTop="308dp"
            android:text="Vaccinations"
            android:textColor="@color/black" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dVaccinationCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="168dp"
            android:layout_marginTop="44dp"
            android:text="Surgeries" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dMedicationsCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="189dp"
            android:layout_marginTop="22dp"
            android:text="Visitations" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dSurgeriesCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="187dp"
            android:layout_marginTop="38dp"
            android:text="Medications" />

        <ImageView
            android:id="@+id/dPetIMG"
            android:layout_width="175dp"
            android:layout_height="172dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="213dp"
            android:layout_marginTop="76dp"
            android:adjustViewBounds="true"
            android:background="@drawable/image_border"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="303dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/pet_button"
            android:text="Add Entry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addSurgeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dVaccinationCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="19dp"
            android:background="@drawable/pet_button"
            android:text="Add Entry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addMedications"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dSurgeriesCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="281dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/pet_button"
            android:text="Add Entry" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addVisitations"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:layout_below="@+id/dMedicationsCase"
            android:layout_alignParentStart="true"
            android:layout_marginStart="281dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pet_button"
            android:text="Add Entry" />

    </RelativeLayout>
</ScrollView>